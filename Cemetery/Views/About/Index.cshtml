@model Cemetery.Entity.Entity.About

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<h4>Hakkımızda</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Index" asp-controller="About" enctype="multipart/form-data" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="AboutId" />
            <div class="form-group">
                <label asp-for="Title" class="control-label">Başlık</label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ImageUrl" class="control-label">Resim</label>
                <br />
                <div class="row">
                    <img class="float-left" src="@ViewBag.image" width="200" />
                    <input class="col-10 ml-2 mt-5 form-control float-right" type="file" asp-for="ImageUrl" />
                </div>
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Description" class="control-label">Açıklama 1</label>
                <textarea asp-for="Description" class="form-control" rows="5"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description2" class="control-label">Açıklama 2</label>
                <textarea asp-for="Description2" class="form-control" rows="5"></textarea>
                <span asp-validation-for="Description2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Kaydet" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



